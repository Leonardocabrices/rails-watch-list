<%= render "share/banner" %>
  <div class="cover mb-6 d-flex align-items-center justify-content-center"> <%= image_tag "" %>
    <div class="text-center text-black">
      <h1>Save any kind of movies</h1>
      <h3 class="typed-js"></h3>
    </div>
  </div>
  <div class="container py-7">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">My Lists</h3>
    </div>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="co-12 colsm-6 col-md-4">
          <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 600, crop: :fill %>')">
            <%= list.name %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
